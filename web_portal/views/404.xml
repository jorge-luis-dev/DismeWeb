<odoo>
  <template id="404" inherit_id="http_routing.404">
    <xpath expr="//*[@id='wrap']" position="replace">
      <t t-set="title">404 - Not Found</t>
      <div id="wrap" class="container">
        <div class="row align-items-center">
          <h2>Page Not Found</h2>
        </div>
      </div>
    </xpath>
  </template>
</odoo>