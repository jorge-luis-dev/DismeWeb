<odoo>
    <template id="home_web_portal" name="Home">
        <t t-call="web.frontend_layout">
            <t t-set="title">
				Home
            </t>
            <div class="container">
                <h1>
					Bienvenido ha nuestro portal en construcci√≥n
                </h1>
            </div>
            <div class="container">
                <h2>
					Categorias de Productos
                </h2>
                <div class="row">
                    <t t-foreach="categories" t-as="category">
                        <div class="col-md-4">
                            <div class="card">
                                <img
                                    t-att-src="image_data_uri(category.image_1920)"
                                    class="card-img-top"
                                    style="max-height:85pt;max-width:85pt"
                                />
                                <div class="card-body">
                                    <h5
                                        class="card-title
                                    "
                                    >
                                        <t t-out="category.name" />
                                    </h5>
                                    <t t-if="category.external_url">
                                        <a
                                            t-attf-href="{{category.external_url}}"
                                            target="_blank"
                                            class="btn btn-outline-primary"
                                        >
                                        Ver Productos
                                        </a>
                                    </t>
                                    <t t-else="">
                                        <a
                                            t-attf-href="/hola/odoo/v1/products/category/{{category.id}}"
                                            class="btn btn-outline-primary"
                                        >
                                        Ver Productos
                                        </a>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
